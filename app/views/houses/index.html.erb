<div>
<div class="listagemcinza">
<h1>Listing houses</h1>


<% @houses.each do |house| %>
<% if house.user_id == current_user.id %>
    
    <div class="linha">
    	
    	<div style="float: left; position: relative;"><%= image_tag house.image.url(:thumb)%></div>
    <div style="margin-left: 5px;position: relative; float:left;width: 75%;">
    <span class="rua">
    	<%= 
    	  link_to house.street , house%>
    	<%= house.street %>, <%= house.number %>
    	
    	<% if house.complement != nil && house.complement != "" %>
    	  - <%= house.complement %>
    	<% end %>
    	 - <%= house.neightborhood %>
    </span>
    <div style="clear:both;"></div>
    <span class="localizacao">
    	<%= house.city %> - <%= house.state %> - <%= house.country %>
    </span>
    
    <div style="clear:both;"></div>
    
    
    <span></span>
    <span><%= link_to 'Edit', edit_house_path(house) if can? :edit, house%></span>
    <span><%= link_to 'Destroy', house, confirm: 'Are you sure?', method: :delete if can? :destroy, house %></span>
    
    </div>
    <div></div>
    
    <div style="clear:both;"></div>
    
</div>
<% end %>
<%end%>

<br />

</div>
<%= link_to 'New House', new_house_path %>
</div>
