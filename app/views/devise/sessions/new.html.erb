<div class="form_normal" style="width: 60%">
<h2 class="titulo" style="margin-left: 40px">Entrar</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => 'form_interno'}) do |f| %>
  <div class="field"> <%= f.label "Email: " %> &nbsp;
  <%= f.email_field :email %></div>

  <div class="field"><%= f.label 'Senha: '%> &nbsp;
  <%= f.password_field :password %></div>
  <br />
  <% if devise_mapping.rememberable? -%>
    <div style="margin-left: 154px"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%><br />

  <div style="margin-left: 154px"><%= f.submit "" %></div>
<% end %><br />
<div style="margin-left: 40px">
<%= render :partial => "devise/shared/links" %>
</div>
</div>
