<div id="main" role="main" class="application">
  <div>
    <h1>Cadastre-se</h1>
    <!--<div class="linha"/>-->
    <p class="letra_vermelha">*Caso não receba o email de confirmação,verifique a pasta de Spam.</p>
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name),
      :html => { :multipart => true, :class => 'form-horizontal form_interno'}) do |f| %>
      <%= devise_error_messages! %>
      <div class="control-group letra_vermelha">
        <%= f.label 'Nome: ****', :class => "control-label" %>
        <div class="controls">
          <%= f.text_field :name  %>
        </div>
      </div>

      <div class="control-group letra_vermelha">
        <%= f.label 'Rg: *', :class => "control-label" %>
        <div class="controls">
          <%= f.text_field :rg  %>
        </div>
      </div>
      <div class="control-group letra_vermelha">
        <%= f.label 'CPF: *', :class => "control-label" %>
        <div class="controls">
          <%= f.text_field :cpf  %>
        </div>
      </div>
      <div class="control-group letra_vermelha">
        <%= f.label 'Telefone: *', :class => "control-label" %>
        <div class="controls">
          <%= f.text_field :telefone  %>
        </div>
      </div>
      <div class="control-group letra_vermelha">
        <%= f.label 'Email: *', :class => "control-label" %>
        <div class="controls">
          <%= f.email_field :email  %>
        </div>
      </div>
      <div class="control-group letra_vermelha">
        <%= f.label 'Senha: *', :class => "control-label" %>
        <div class="controls">
          <%= f.password_field :password  %>
        </div>
      </div>
      <div class="control-group letra_vermelha">
        <%= f.label 'Confirmar senha: *', :class => "control-label" %>
        <div class="controls">
          <%= f.password_field :password_confirmation  %>
        </div>
      </div>
      <div class="control-group letra_vermelha">
        <%= f.label 'Foto: *', :class => "control-label"%>
        <div class="controls">
          <%= f.file_field :avatar %>
        </div>
      </div>
      <div class="control-group actions">
        <div class="controls">
          <%= f.submit "Enviar dados"%>
        </div>
      </div>
    <% end %>
    <div>
      <%= render :partial => "devise/shared/links" %>
    </div>
  </div>
</div>


