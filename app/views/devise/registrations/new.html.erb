<div id="main" role="main" class="application">
  <div>
    <h1>Cadastre-se</h1>
    <!--<div class="linha"/>-->
    <p class="letra_vermelha">*Caso não receba o email de confirmação,verifique a pasta de Spam.</p>
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name),  :class => "formAligns", :html => { :multipart => true, :class => 'form_interno'}) do |f| %>
      <%= devise_error_messages! %>
      <div class="letra_vermelha">
        <%= f.label 'Nome: *' %>
        <%= f.text_field :name  %>
      </div>

      <div class="letra_vermelha">
        <%= f.label 'Rg: *' %>
        <%= f.text_field :rg  %>
      </div>
      <div class="letra_vermelha">
        <%= f.label 'CPF: *' %>
        <%= f.text_field :cpf  %>
      </div>

      <div class="letra_vermelha">
        <%= f.label 'Telefone: *' %>
        <%= f.text_field :telefone  %>
      </div>

      <div class="letra_vermelha">
        <%= f.label 'Email: *' %>
        <%= f.email_field :email  %>
      </div>

      <div class="letra_vermelha">
        <%= f.label 'Senha: *' %>
        <%= f.password_field :password  %>
      </div>

      <div class="letra_vermelha">
        <%= f.label 'Confirmar senha: *' %>
        <%= f.password_field :password_confirmation  %>
      </div>

      <div class="letra_vermelha">
        <%= f.label 'Foto: *', :class=>"letra_vermelha"%>
        <%= f.file_field :avatar %>
      </div>

    <div class="actions">
        <%= f.submit "Enviar dados"%>
      </div>
    <% end %>
    <div>
      <%= render :partial => "devise/shared/links" %>
    </div>
  </div>
</div>


