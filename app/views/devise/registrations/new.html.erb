<div id="main" role="main" class="application">
    <div>
        <h1>Cadastre-se</h1>
        <p>*Caso não receba o email de confirmação,verifique a pasta de Spam.</p>
        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name),  :class => "formAligns", :html => { :multipart => true, :class => 'form_interno'}) do |f| %>
        <%= devise_error_messages! %>
        <div>
            <%= f.label 'Nome: *' %>&nbsp;
            <%= f.text_field :name %>
        </div>

        <div>
            <%= f.label 'Rg: *' %>&nbsp;
            <%= f.text_field :rg %>
        </div>
        <div>
            <%= f.label 'CPF: *' %>&nbsp;
            <%= f.text_field :cpf %>
        </div>

        <div>
            <%= f.label 'Telefone: *' %>&nbsp;
            <%= f.text_field :telefone %>
        </div>

        <div>
            <%= f.label 'Email: *' %>&nbsp;
            <%= f.email_field :email %>
        </div>

        <div>
            <%= f.label 'Senha: *' %>&nbsp;
            <%= f.password_field :password %>
        </div>

        <div>
            <%= f.label 'Confirmação de senha: *' %>&nbsp;
            <%= f.password_field :password_confirmation %>
        </div>

        <div class="field">
            <%= f.label 'Foto: *'%>
            <%= f.file_field :avatar %>
        </div>

        <div>
            <%= f.submit "" %>
        </div>
        <% end %>
        <div>
            <%= render :partial => "devise/shared/links" %>
        </div>
    </div>
</div>


