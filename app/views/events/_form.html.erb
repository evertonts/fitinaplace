<%= form_for(@event,  :class => "formAligns", :html => {:multipart => true,:class => 'form_interno' }) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="letra_vermelha">
    <%= f.label 'Nome: '%>&nbsp;
    <%= f.text_field :name , :style=>"border-color: #A80713;"%>
  </div>
  <div class="letra_vermelha">
    <%= f.label 'Descrição: ' %>&nbsp;
    <%= f.text_field :description , :style=>"border-color: #A80713;"%>
  </div>
  <div class="letra_vermelha">
    <%= f.label 'Endereço: ' %>&nbsp;
    <%= f.text_field :address, :style=>"border-color: #A80713;" %>
  </div>
  <div class="letra_vermelha">
    <%= f.label 'Cidade: ' %>&nbsp;
    <%= f.text_field :city , :style=>"border-color: #A80713;"%>
  </div>
  <div class="letra_vermelha">
    <%= f.label 'Estado: ' %>&nbsp;
    <%= f.text_field :state, :style=>"border-color: #A80713;" %>
  </div>
  <div class="letra_vermelha">
    <%= f.label 'Data: ' %>&nbsp;
    <%= f.date_select :date , :style=>"border-color: #A80713;"%>
  </div>
  
  <div class="letra_vermelha"><%= f.label 'Foto: ' %>&nbsp;
	<%= f.file_field :avatar , :style=>"border-color: #A80713;"%></div>
  <div class="actions" style="margin-left: 10px">
  	<br />
    <%= f.submit 'Enviar dados', :style=>"background-color:#A80713; color:white;width: 120px;
height: 40px;margin-left: 180px;border-radius: 10px;"%>
  </div>
<% end %>