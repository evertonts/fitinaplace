<div id= "main2" role="main" class="application"  >
  <div class="listagemcinza" style="width: 95%">
    <h1>Eventos</h1>
    <% @events.each do |event| %>
      <br />
      <div class="linha row-fluid">
        <div class="spam9" style="float: left; text-align: justify">
          <span><%= link_to event.name, event if can? :show, event, {:class=>"linkum"}%></span>
          <br/>
          <%= simple_format(event.description.to 500) %>
        </div>
        <div class="spam3" style="float: right">
          <%= image_tag event.avatar.url(:thumb)%>
        </div>
      </div>
    <%end%>
  </div>
  <br />
  <% if user_signed_in? %>
    <%= link_to 'Criar um novo evento', new_event_path %>
  <%end%>
</div>

